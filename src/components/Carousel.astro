---
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
import "swiper/css/autoplay";

const noticias = [
  { titulo: "DeepSeek desaf칤a a OpenAI", imagen: "/img/inteligenciaartificial/DeepSeek-la-innovadora-IA-china-que-amenaza-a-ChatGPT.avif", enlace: "/inteligenciaartificial/deepseek-la-innovadora-ia-china-que-amenaza-a-chatgpt" },
  { titulo: "Contrasenas mas hackeadas", imagen: "img/blog/contrasenas-mas-hackeadas-1b.avif", enlace: "/blog/contrasenas-mas-hackeadas-1/" },
  { titulo: "El futuro de la IA en 2025", imagen: "/inteligenciaartificial5a.avif", enlace: "/blog/inteligenciaartificial5/" }
];
---

<style>
  .swiper-container {
    max-width: 750px;
    margin: 0 auto;
    padding-bottom: 0.5rem;
    padding-top: 1rem;
  }

  .swiper-slide {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
  }

  .swiper-slide img {
    width: 100%;
    height: 45%; /*ancho imagen */
    object-fit: cover;
    border-radius: 8px;
  }

  /* 游댳 Ajuste del degradado y t칤tulo */
  .titulo-overlay {
    position: absolute;
    bottom: 15%; /* 游늷 T칤tulo un poco m치s abajo */
    left: 50%;
    transform: translate(-50%, 50%);
    width: 100%;
    padding: 15px;
    text-align: center;
    color: white;
    font-weight: bold;
    font-size: 1.5rem; /* 游늷 T칤tulo m치s grande */
  }

  /* 游댳 Degradado cubriendo bien el fondo del t칤tulo */
  .titulo-bg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50%; /* 游늷 Cubre bien el fondo del t칤tulo */
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.5) 50%, rgba(0, 0, 0, 0) 100%);
  }

  .swiper-button-next, .swiper-button-prev {
    color: white !important;
    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.5));
  }

  .swiper-button-next:hover, .swiper-button-prev:hover {
    color: #f0f0f0;
  }
</style>

<div class="swiper mySwiper swiper-container">
  <div class="swiper-wrapper">
    {noticias.map(noticia => (
      <div class="swiper-slide">
        <a href={noticia.enlace}>
          <img src={noticia.imagen} alt={noticia.titulo} />
          <div class="titulo-bg"></div> <!-- Degradado de fondo -->
          <h3 class="titulo-overlay">{noticia.titulo}</h3>
        </a>
      </div>
    ))}
  </div>

  <!-- Botones de navegaci칩n -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>

  <!-- Paginaci칩n -->
  <div class="swiper-pagination"></div>
</div>

<!-- Script para inicializar Swiper -->
<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';

  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".mySwiper", {
      modules: [Navigation, Pagination, Autoplay],
      slidesPerView: 1,
      spaceBetween: 20,
      navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
      pagination: { el: ".swiper-pagination", clickable: true },
      loop: true,
      autoplay: { delay: 3000 },
    });
  });
</script>
